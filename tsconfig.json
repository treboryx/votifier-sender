{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "paths": {
      "*": [
          "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}